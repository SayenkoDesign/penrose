<div class="row column text-center">
    <h3>{{ panel.heading }}</h3>
</div>
<div class="row small-up-1 medium-up-2 large-up-4">
    {% for member in panel.members %}
        <div class="column member">
            <a href="#member_{{ loop.index }}" class="profile fancybox">
                <img src="{{ member.image.sizes.profile }}" alt="">
            </a>
            <h4>{{ member.first_name }} {{ member.last_name }}</h4>
            <h6>{{ member.position }}</h6>
            <a href="mailto:{{ member.email }}">Email {{ member.first_name }}</a>
        </div>
        <div id="member_{{ loop.index }}" class="member-lightbox">
            <div class="row">
                <div class="small-12 large-4 columns">
                    <img src="{{ member.image.sizes.profile }}" alt="">
                    <a href="mailto:{{ member.email }}">Email {{ member.first_name }}</a>
                    <a href="#appointment" class="fancybox primary button">Schedule an Evaluation</a>
                </div>
                <div class="small-12 large-8 columns">
                    <h3>{{ member.first_name }} {{ member.last_name }}</h3>
                    <h6>{{ member.position }}</h6>

                    <h5>Professional Bio</h5>
                    {{ member.professional_bio }}

                    <h5>Personal Bio</h5>
                    {{ member.personal_bio }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>