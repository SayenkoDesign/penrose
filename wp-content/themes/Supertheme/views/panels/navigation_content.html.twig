<div class="row">
    <div class="small-12 large-4 columns">
        <h3>{{ panel.first_heading }}</h3>
        {{ panel.first_content }}
        <div class="triangle"></div>
    </div>
    <div class="small-12 medium-6 large-4 columns">
        <h4>{{ panel.first_heading }}</h4>
        <ul class="no-bullet">
            {% for link in panel.second_links %}
                <li><a href="{{ function('get_permalink', link.second_link.ID) }}">{{ link.second_link.post_title }}</a></li>
            {% endfor %}
        </ul>
    </div>
    <div class="small-12 medium-6 large-4 columns">
        <h4>{{ panel.first_heading }}</h4>
        <ul class="no-bullet">
            <ul class="no-bullet">
                {% for link in panel.third_links %}
                    <li><a href="{{ function('get_permalink', link.third_link.ID) }}">{{ link.third_link.post_title }}</a></li>
                {% endfor %}
            </ul>
        </ul>
    </div>
</div>